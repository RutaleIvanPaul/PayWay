<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Cards" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="contentPadding">4dp</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadlineText">
        <item name="android:textColor">#414141</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">#6E6E6E</item>
    </style>

    <style name="DefaultButton" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <!--        <item name="android:padding">8dp</item>-->
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TransparentButton" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/transparent_button</item>
<!--        <item name="android:padding">8dp</item>-->
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="NonTransparentButton" >
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/non_transparent_button</item>
    </style>


</resources>